  font-family: Arial, sans-serif;
}

/* Flexbox Navigation */
nav {
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #4CAF50;
  color: white;
  padding: 10px;
}
nav a {
  color: white;
  text-decoration: none;
  font-weight: bold;
}
nav a:hover { text-decoration: underline; }

/* Grid Layout for Content */
main {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 10px;
  padding: 10px;
}
aside, article {
  background: #f0f2f5;
  padding: 20px;
  border-radius: 5px;
}

footer {
  text-align: center;
  padding: 10px;
  background: #ddd;
  margin-top: 10px;
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
  main {
    grid-template-columns: 1fr;
  }
  nav {
    flex-direction: column;
    gap: 5px;
  }
}
</style>
